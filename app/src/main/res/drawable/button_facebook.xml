<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_corner_radius"></corners>
            <stroke android:width="1dip" android:color="@color/facebook_dark_blue" />
            <gradient android:angle="-90" android:startColor="@color/facebook_dark_blue" android:endColor="@color/facebook_dark_blue"  />
            <size android:width="360dp"></size>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_corner_radius"></corners>
            <stroke android:width="1dip" android:color="@color/facebook_dark_blue" />
            <solid android:color="@color/facebook_dark_blue"/>
            <size android:width="360dp"></size>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/button_corner_radius"></corners>
            <stroke android:width="1dip" android:color="@color/facebook_blue" />
            <gradient android:angle="-90" android:startColor="@color/facebook_blue" android:endColor="@color/facebook_blue" />
        </shape>
    </item>
</selector>