<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up_5_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/forte"
            android:text="@string/daftar"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_size"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/toolbar_top"
        android:background="@drawable/toolbar_dropshadow" />

    <LinearLayout
        android:id="@+id/sign_up_5_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shadow"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_primary"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_primary"
            android:gravity="center"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_primary"
            android:gravity="center"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_primary"
            android:gravity="center"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_orange"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/dark_grey" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_grey"
            android:gravity="center"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/dark_grey" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_grey"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

        <View
            android:layout_width="@dimen/default_margin"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center_vertical"
            android:background="@color/dark_grey" />

        <TextView
            android:layout_width="@dimen/nav_circle_size"
            android:layout_height="@dimen/nav_circle_size"
            android:background="@drawable/bg_grey"
            android:gravity="center"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/default_welcome_font" />

    </LinearLayout>

    <TextView
        android:id="@+id/sign_up_5_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_5_navigation"
        android:text="@string/sign_up_5_title"
        android:textAlignment="center"
        android:textSize="@dimen/page_title"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sign_up_5_title"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginBottom="@dimen/double_default_margin"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_border" />

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="@dimen/camera_button_size"
        android:layout_height="@dimen/camera_button_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/button_primary"
        android:onClick="scanCreditCard"></Button>

</RelativeLayout>